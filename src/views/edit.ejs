<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Agenda</title>
    
        <link rel="stylesheet" href="css/style.css">
    </head>

<body>

    <h1><%= title %></h1>
    <h2><% if (typeof message !== 'undefined') { %>
        <%= message%>
        <%}%>
    </h2>

    <form action="/edit/<%=user._id%>" method="post">
        <div>
            <label >Nome</label>
            <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name%>">
        </div>

        <div>
            <label >Idade</label>
            <input type="text" name="age" placeholder="Digite a sua idade" value="<%= user.age%>">
        </div>

        <div>
            <label >E-mail</label>
            <input type="email" name="email" placeholder="Digite aqui o seu e-mail" value="<%= user.email%>">
        </div>
        <button type="submit">Editar</button>

    </form>

    <%- include('partials/navbar.ejs') %>

    <script src="js/register-script.js"></script>
    
</body>
</html>